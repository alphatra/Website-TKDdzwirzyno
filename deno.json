{
  "nodeModulesDir": "manual",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A --env _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update ."
  },
  "lint": { "rules": { "tags": ["fresh", "recommended"] } },
  "exclude": ["_fresh/", "_backup/"],
  "imports": {
    "@/": "./",
    "clsx": "npm:clsx@^2.1.1",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "preact": "npm:preact@^10.28.1",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "tailwind-merge": "npm:tailwind-merge@^3.4.0",
    "vite": "npm:vite@^6.0.0",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
    "pocketbase": "npm:pocketbase",
    "nodemailer": "npm:nodemailer@6.9.13",
    "sanitize-html": "npm:sanitize-html",
    "@types/sanitize-html": "npm:@types/sanitize-html"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": ["vite/client"]
  }
}
